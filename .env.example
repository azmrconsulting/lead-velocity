# Lead Velocity - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# VAPI Configuration
# ===================
VAPI_API_KEY=
VAPI_WEBHOOK_SECRET=

# ===================
# Google Configuration
# ===================
# OAuth credentials for Sheets + Calendar access
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# ===================
# n8n Configuration
# ===================
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_BASE_URL=https://your-vps-domain.com/webhook

# ===================
# Browse AI Configuration
# ===================
BROWSE_AI_API_KEY=
BROWSE_AI_ROBOT_ID=

# ===================
# Notifications
# ===================
# Email (SMTP or service like SendGrid)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===================
# Optional: Monitoring
# ===================
# SLACK_WEBHOOK_URL=
# SENTRY_DSN=
